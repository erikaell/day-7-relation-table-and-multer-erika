<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/public/style.css" />
    <title>Add-Project</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-whitesmoke">
      <div class="container">
        <a class="navbar-brand me-5" href="#">
          <img src="/public/assets/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item fw-semibold">
              <a class="nav-link me-3 text-dark" href="/">Home</a>
            </li>
            <li class="nav-item fw-semibold">
              <a
                class="nav-link active text-dark fw-bold"
                aria-current="page"
                href="#"
              >Add Project</a>
            </li>
          </ul>
          <div class="d-flex">
          {{#if isLogin}}
            <span style="padding-top:7px" class="fw-semibold">Hi! {{user.name}},</span>
            <a href='/logout' class='btn-auth fw-semibold text-dark'> Logout </a>
          {{else}}
            <a href='/register' class='btn-auth fw-semibold text-dark'> Register </a>
            <a href='/login' style='padding-right: 60px;' class='btn-auth fw-semibold'> Login </a>
          {{/if}}
          <a class="btn btn-dark text-white" href="/contact-me">
            Contact Me
          </a>
          </div>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <div
      class="container-project-form d-flex justify-content-center align-items-center bg-whitesmoke pb-5"
    >
        <form action="add-project" class="m-0" method="POST" enctype='multipart/form-data'>
        <h2 class="text-center mb-3 mt-3 fw-bold">ADD MY PROJECT</h2>
        <div class="mb-3">
          <label for="input-project-name" class="form-label">Project Name</label>
          <input
            type="text"
            class="form-control"
            id="input-project-name"
            name="name"
            placeholder="Write here ..."
          />
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label for="input-start-date" class="form-label">Start Date</label>
            <input
              type="date"
              class="form-control"
              id="input-start-date"
              name="startDate"
            />
          </div>
          <div class="col-md-6">
            <label for="input-end-date" class="form-label">End Date</label>
            <input
              type="date"
              class="form-control"
              id="input-end-date"
              name="endDate"
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="input-description" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="input-description"
            name="description"
            rows="3"
            placeholder="Write here ..."
          ></textarea>
        </div>
        <div class="checkbox-techs mb-3">
          <label>Technologies</label>
          <div class="row">
            <fieldset class="col-sm-6">
              <label class="text-muted">
                <input
                  type="checkbox"
                  name="html"
                  id="html"
                />
                <span>HTML</span>
              </label>
            </fieldset>
            <fieldset class="col-sm-6">
              <label class="text-muted">
                <input
                  type="checkbox"
                  name="css"
                  id="css"
                />
                <span>CSS</span>
              </label>
            </fieldset>
            <fieldset class="col-sm-6">
              <label class="text-muted">
                <input
                  type="checkbox"
                  name="javascript"
                  id="javascript"
                />
                <span>Javascript</span>
              </label>
            </fieldset>
            <fieldset class="col-sm-6">
              <label class="text-muted">
                <input
                  type="checkbox"
                  name="php"
                  id="php"
                />
                <span>PHP</span>
              </label>
            </fieldset>
          </div>
        </div>
        <div class="mb-3">
          <label for="input-image" class="form-label">Upload Image</label>
          <input
            class="form-control"
            type="file"
            id="input-image"
            name="image"
          />
        </div>
        <div class="text-end mt-3">
          <button class="btn btn-dark text-white px-4 fw-bold">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>