<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/public/style.css" />
    <title>Detail Project</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-whitesmoke">
      <div class="container">
        <a class="navbar-brand me-5" href="#">
          <img src="/public/assets/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item fw-semibold">
              <a
                class="nav-link me-3 text-dark"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item fw-semibold">
              <a class="nav-link text-dark" href="/add-project">Add Project</a>
            </li>
          </ul>
          <div class="d-flex">
          {{#if isLogin}}
            <span style="padding-top:7px" class="fw-semibold">Hi! {{user.name}},</span>
            <a href='/logout' class='btn-auth fw-semibold text-dark'> Logout </a>
          {{else}}
            <a href='/register' class='btn-auth fw-semibold text-dark'> Register </a>
            <a href='/login' style='padding-right: 60px;' class='btn-auth fw-semibold'> Login </a>
          {{/if}}
          <a class="btn btn-dark text-white" href="/contact-me">
            Contact Me
          </a>
          </div>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <div
      class="container-project-form align-items-center bg-whitesmoke d-flex flex-column m-0 p-2"
    >
    <h2 class="mt-3 fw-bold mb-3">{{project.name}}</h2>
    <div class="container">
    <div class="row p-5">
    <div class="col-md-8" >
        <img src="{{project.image}}" style="max-width:700px" alt="">
    </div>
    <div class="col-md-4">
          <h4>Duration</h4>
          <h5><i class="fa-solid fa-calendar-days"></i> {{project.startDateNew}}-{{project.endDateNew}}</h5>
          <h5><i class="fa-solid fa-clock"></i> {{project.duration}}</h5>
          <h4>Technologies</h4>
          <div class="techs-list mb-3">
          <ul>
              {{#if project.technologies.[0]}}<li><h4><i class='fa-brands fa-html5'></i> HTML</h4></li>{{/if}}
              {{#if project.technologies.[1]}}<li><h4><i class='fa-brands fa-js'></i> JS</h4></li>{{/if}}
              {{#if project.technologies.[2]}}<li><h4><i class='fa-brands fa-css3'></i> CSS</h4></li>{{/if}}
              {{#if project.technologies.[3]}}<li><h4><i class='fa-brands fa-php'></i> PHP</h4></li>{{/if}}
          </ul>
          </div> 
    </div> 
    </div>
    <div class="row pl-5 pr-5">
    <div class="col-md-12"></div>
    <p>{{project.description}}</p>
    </div>
    </div>
    </body>
    </html>